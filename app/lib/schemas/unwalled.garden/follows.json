{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://unwalled.garden/follows.json",
  "type": "object",
  "title": "Follows",
  "description": "A list of data subscriptions.",
  "required": [
    "type",
    "urls"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "unwalled.garden/follows"
    },
    "urls": {
      "type": "array",
      "description": "The followed URLs",
      "items": {
        "type": "string",
        "format": "uri"
      }
    }
  }
}